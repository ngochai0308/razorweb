@using APS.net_Entity_.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManage

@{
    //SignInManager.IsSignedIn(User)
}
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-area="Identity" class="nav-link text-dark" asp-page="/Account/Manage/Index">
                Xin chào @UserManage.GetUserName(User)!  
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Đăng xuất</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-area="Identity" class="nav-link text-dark" asp-page="/Account/Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" class="nav-link text-dark" asp-page="/Account/Login">Đăng nhập</a>
        </li>
    }
</ul>
