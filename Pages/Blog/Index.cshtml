@page
@model APS.net_Entity_.Pages_Blog.IndexModel

@{
    ViewData["Title"] = "Index";
    int i = 1;
}

@{
    var pagingmodel = new APS.net_Entity_.Helpers.PagingModel()
            {
                currenpage = Model.currentPage,
                countpages = Model.countPages,
                generateUrl = (int? p) => Url.Page("/Blog/Index", new { p = p })
            };
}
<partial name="_PaginXTL" model="@pagingmodel"></partial>



<h1>Danh sách bài viết</h1>
<form>
    <label>Tìm kiếm</label>
    <input name="SearchString" value="" />
    <input type="submit" value="Tìm" />
</form>

<p>
    <a asp-page="Create" class="btn btn-primary mt-3">Tạo bài viết mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Article)
        {
            <tr>
                <td>@(i++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Sửa</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Xem</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
