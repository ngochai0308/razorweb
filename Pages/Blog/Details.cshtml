@page "/xembaiviet/{id:int}"
@model APS.net_Entity_.Pages_Blog.DetailsModel

@{
    ViewData["Title"] = @Model.Article.Title;
}

<h1> @Model.Article.Title</h1>
<p><i>@Html.DisplayFor(model => model.Article.Created)</i></p>
<hr />
@Html.Raw(Model.Article.Content)
<hr />
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Article?.Id" class="btn btn-primary">Chỉnh sửa</a> |
    <a asp-page="./Index" class="btn btn-success">Trở lại danh sách</a>
</div>
